MODULE user_command_0100 INPUT.

  CASE ok_code.
    WHEN '&F03' OR '&F12'.
      LEAVE TO SCREEN 0.
    WHEN '&F15'.
      LEAVE TO SCREEN 0.
  ENDCASE.

ENDMODULE.
